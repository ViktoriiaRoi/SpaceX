<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.viktoriiaroi.spacex.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/launchFragment"
        android:name="com.viktoriiaroi.spacex.ui.launch.LaunchFragment"
        android:label="Launches"
        tools:layout="@layout/fragment_launch">
        <deepLink
            app:action="android.intent.action.VIEW"
            app:mimeType="type/subtype"
            app:uri="app://spacex/launches" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.viktoriiaroi.spacex.ui.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news">
        <deepLink
            app:action="android.intent.action.VIEW"
            app:mimeType="type/subtype"
            app:uri="app://spacex/news" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.viktoriiaroi.spacex.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <dialog
        android:id="@+id/bottomSheet"
        android:name="com.viktoriiaroi.spacex.ui.details.DetailsFragment"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="launch"
            app:argType="com.viktoriiaroi.core.model.Launch" />
    </dialog>
</navigation>