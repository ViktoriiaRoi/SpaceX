<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText" parent="Theme.SpaceX">
        <item name="android:textColor">@color/contentSupporting</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LogoText" parent="BaseText">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/gradient_start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardText" parent="BaseText">
        <item name="android:textSize">@dimen/card_text_size</item>
    </style>

    <style name="TitleText" parent="BaseText">
        <item name="android:fontFamily">@font/goldman_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="MainText" parent="BaseText">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="ErrorText" parent="BaseText"></style>
</resources>