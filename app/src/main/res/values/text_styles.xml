<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LogoText" parent="Theme.SpaceX">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/gradient_start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText" parent="Theme.SpaceX">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="NormalText" parent="Theme.SpaceX">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SmallText" parent="Theme.SpaceX">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ErrorText" parent="Theme.SpaceX">
    </style>
</resources>